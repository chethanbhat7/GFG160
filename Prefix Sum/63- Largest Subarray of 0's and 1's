class Solution {
    public int maxLen(int[] arr) {
        // Your code here
        HashMap<Integer,Integer> map=new HashMap<>();
        
        int sum=0;
        int maxlen=0;
        
        map.put(0,-1);
        for(int i=0;i<arr.length;i++)
        {
            if(arr[i]==0)
            sum-=1;
            else
            sum+=1;
            
            if(map.containsKey(sum)){
                int len=i-map.get(sum);
                maxlen=Math.max(maxlen,len);
            }
            else{
                map.put(sum,i);
            }
            
        }
        return maxlen;
    }
}
