 #User function Template for python3
 
class Solution:
    
    # arr[] : the input array
    
    #Function to return length of longest subsequence of consecutive integers.
    def longestConsecutive(self,arr):
        if not arr:
            return 0
            
        arr=sorted(set(arr))
        
        count=1
        final=1
        
        for i in range(1,len(arr)):
            if(arr[i]==arr[i-1]+1):
                count+=1
            else:
                count=1
            
            final=max(final,count)
            
        return final
