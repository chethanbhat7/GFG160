class Solution:
    def cntSubarrays(self, arr, k):
        mp={}
        res=0
        cursum=0
        
        for val in arr:
            cursum+=val
            
            if cursum==k:
                res+=1
                
            if cursum-k in mp:
                res+=mp[cursum-k]
            
            mp[cursum]=mp.get(cursum,0)+1
        return res
