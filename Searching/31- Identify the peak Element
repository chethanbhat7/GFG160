class Solution {
    public int peakElement(int[] arr) {
        int first=0;
        int last=arr.length-1;
        
        while(first<last)
        {
            int m=first+((last-first)/2);
            if((arr[m]<arr[m+1]))
            {
                first=m+1;
            }
            else 
            {
                last=m;
            }
        }
        return first;
    }
}
